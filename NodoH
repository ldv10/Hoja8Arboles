// Esta clase se encarga de representar un arbol que si tiene hijos.
public class NodoH extends ArbolH {
    private ArbolH izquierda = null;
    private	ArbolH	derecha = null; 
 
    // Construcctor
    public NodoH(ArbolH izq, ArbolH der) {
        super(izq.getFrecuencia() + der.getFrecuencia());
        izquierda = izq;
        derecha = der;
    }
     // SEtters y Getters
	public ArbolH getIzquierda() {
		return izquierda;
	}

	public void setIzquierda(ArbolH izquierda) {
		this.izquierda = izquierda;
	}

	public ArbolH getDerecha() {
		return derecha;
	}

	public void setDerecha(ArbolH derecha) {
		this.derecha = derecha;
	}
    
    
}
