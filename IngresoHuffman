import java.util.Scanner;

public class IngresoHuffman {
	 public static void main(String[] args) {
    	 String test;
    	Scanner teclado = new Scanner(System.in);
    	Huffman huffman = new Huffman();
    	
    	System.out.println("Ingrese los caracteres: ");
    	 test = teclado.nextLine();
    	
    	
    	 //Se asume que el string tiene un codigo menor a 256
        int[] FrecuenciaCaract = new int[256];
        // Se lee cada carcater y se guarda la frecuencia con la que aparecen
        for (char c : test.toCharArray())
        	FrecuenciaCaract[c]++;
 
        //Se construye el arbol
        ArbolH tree = huffman.buildTree(FrecuenciaCaract);
 
        // Impresion
        System.out.println("Simbolo\tCantidad\tCodigo Huffman");
        huffman.impresion(tree, new StringBuffer());
        
        System.out.println("Ingrese el mensaje que desea traducir, se pare el codigo de cada caracter con ' ': ");
   	 	String mensaje = teclado.nextLine();
   	 	
   	 	System.out.println(huffman.traducir(tree, mensaje));
   	 	
    }
}
